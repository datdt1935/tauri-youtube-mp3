{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "YouTube Downloader",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APPDATA/**", "$DOCUMENT/**", "$DOWNLOAD/**", "$MUSIC/**", "$VIDEO/**"]
      },
      "path": {
        "all": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.youtubedownloader.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "binaries/macos/arm64/yt-dlp",
        "binaries/macos/arm64/ffmpeg",
        "binaries/macos/x64/yt-dlp",
        "binaries/macos/x64/ffmpeg",
        "binaries/windows/x64/yt-dlp.exe",
        "binaries/windows/x64/ffmpeg.exe"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "YouTube Downloader",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "macOSPrivateApi": true
  }
}

